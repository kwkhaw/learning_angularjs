angular.service('Photographers', function($resource) {
	return $resource('<%= photographers_path(':photographer_id') %>', {}, { 'index': { method: 'GET', isArray: true }});
});

angular.service('Galleries', function($resource) {
	return $resource('<%= photographers_galleries_path(':photographer_id', ':photographer_id') %>', {}, { 'index': { method: 'GET', isArray: true }});
});

angular.service('Photos', function($resource) {
	return $resource('<%= photographers_galleries_photos_path(':photographer_id', ':photographer_id') %>', {}, { 'index': { method: 'GET', isArray:true }});
});

angular.service('SelectedPhotos', function($resource) {
	return $resource('selected_photos_path(:selected_photo_id)', {}, { 'create': { method: 'POST' },
																															'index': { method: 'GET', isArray: true },
																															'update': { method: 'PUT' },
																															'destroy': { method: 'DELETE' }});
});